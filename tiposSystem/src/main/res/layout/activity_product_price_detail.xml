<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/u_activity_back"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <!-- tools:context=".ComparePriceDetailActivity" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/sub_border"
        >

        <LinearLayout
            android:id="@+id/linearLayoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                style="@style/TextView_Style"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="상품명 : "
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView2"
                style="@style/TextView_Style"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:text="XXXXX"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                style="@style/TextView_Style"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="바코드 : "
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView4"
                style="@style/TextView_Style"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:text=""
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                style="@style/TextView_Style"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="매입가 : "
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView6"
                style="@style/TextView_Style"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:text="XXXXX"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                style="@style/TextView_Style"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="0.7"
                android:text="판매가 : "
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

            <TextView
                android:id="@+id/textView8"
                style="@style/TextView_Style"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:text=""
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

        </LinearLayout>

    </LinearLayout>


    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        style="@style/GridHeadLinear_Style"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dip"
        android:background="@drawable/head_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item1"
                style="@style/GridHeadText_Style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:height="20dp"
                android:text=" 상 품 명 " />
        </LinearLayout>

        <View style="@style/divider_h" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item2"
                    style="@style/GridHeadText_Style"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="지역" />

                <View style="@style/divider_v" />

                <TextView
                    android:id="@+id/item3"
                    style="@style/GridHeadText_Style"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="크기" />

                <View style="@style/divider_v" />

                <TextView
                    android:id="@+id/item4"
                    style="@style/GridHeadText_Style"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:text="매입가" />

                <View style="@style/divider_v" />

                <TextView
                    android:id="@+id/item5"
                    style="@style/GridHeadText_Style"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:text="판매가" />

                <View style="@style/divider_v" />

                <TextView
                    android:id="@+id/item6"
                    style="@style/GridHeadText_Style"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"
                    android:text="수정일" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- List Divider -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="?android:attr/listDivider" />

    <!-- ListView (grid_items) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <ListView
            android:id="@+id/listviewPriceDetailList"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</LinearLayout>