<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/contact_box_bg"
    tools:context=".InputQuestionActivity"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewShopTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="XX 마트"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
   
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.1"
	    android:layout_marginTop="5dp"
	    android:orientation="horizontal" >
	    
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.5" 
	        android:text="연락처"
			android:textColor="#ffffff"
	        android:textSize="20sp"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
	    <EditText
	        android:id="@+id/editTextContectNumber"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" 
	        android:background="@drawable/white_text_box_small"
	        android:ems="10"
	        android:inputType="phone"
	        android:clickable="false" 
		    android:cursorVisible="false" 
		    android:focusable="false" 
		    android:focusableInTouchMode="false"
	        android:textColor="#000000" />	    
	</LinearLayout>
	    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.15"
	    android:layout_marginTop="5dp"
	    android:orientation="horizontal" >

        <TextView
	        android:id="@+id/textView3"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.5"
	        android:text="문의유형"
	        android:textColor="#ffffff"
	        android:textSize="20sp"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <Spinner
	        android:id="@+id/spinnerQuestionType"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
			android:layout_weight="1"
	        android:entries="@array/question_type"
	        android:prompt="@string/choose_question"
	        android:textColor="#000000" />
    
	</LinearLayout>
	
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.1"
	    android:layout_marginTop="5dp"
	    android:orientation="horizontal" >

        <EditText
	        android:id="@+id/editTextTitle"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"	        
	        android:hint="제목을 입력해 주세요!"
	        android:textColor="#000000"	        
	        android:padding="2dp"
	        android:background="@drawable/white_text_box_small"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
		   
	</LinearLayout>
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginTop="10dp"
	    android:orientation="horizontal" >
	    
	    
	   <EditText
	        android:id="@+id/editTextContent"
	        android:layout_width="match_parent"	        
	        android:layout_height="match_parent"	        
	        android:layout_weight="1"        
	        android:background="#ffffff"
	        android:inputType="textMultiLine"	        
	        android:padding="5dp"
	        android:hint="내용을 입력해 주세요!"
	        android:gravity="top|left"
	        android:textColor="#000000" />
	
	    
	</LinearLayout>
    
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.2"
	    android:layout_marginTop="5dp"
	    android:gravity="center"
	    android:orientation="horizontal" >
	    
	    <Button
	        android:id="@+id/buttonSave"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/contact_btn_save" />
	    
	    <Button
	        android:id="@+id/buttonCancel"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="25dip"
	        android:background="@drawable/contact_btn_cancel" />
	
    </LinearLayout>

</LinearLayout>