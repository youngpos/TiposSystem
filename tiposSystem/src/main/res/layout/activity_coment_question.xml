<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contact_box_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InputQuestionActivity" >
    
    <TextView
        android:id="@+id/textViewShopTitle"
        android:layout_width="match_parent"        
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:gravity="center|center_vertical"
        android:text="XX 마트"        
        android:textColor="#ffffff"
        android:textSize="13sp" />
	<TextView
  	    android:id="@+id/content_title"
  	    android:layout_width="match_parent"	    
  	    android:layout_height="0dp"
  	    android:layout_weight="0.1"  	    
  	    android:textColor="#ffffff"
  	    android:textSize="13dp"
  	    android:textStyle="bold" 	    
  	    android:layout_gravity="center"
  	    android:gravity="center|center_vertical"
  	    android:text="제목" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >
        <EditText android:id="@+id/textviewComents"
  	    android:layout_width="0dip"	    
  	    android:layout_height="match_parent"
  	    android:layout_weight="1"
  	    android:textColor="#000000" 	   
  	    android:gravity="top|left"  	
  	    android:background="#ffffff"    
  	    android:padding="5dip"
  	    android:layout_marginRight="3dip"
  	    android:inputType="textMultiLine"	  
  	    android:hint="댓글을 작성해 주세요~!" />
        
        <Button android:id="@+id/buttonComentSave" 
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="전송"
            android:textColor="#000000"
            android:background="@drawable/btn_basic"  />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        
        android:layout_height="0dip"
        android:layout_marginTop="5dp"
        android:layout_weight="0.07"
        android:background="#D5D5D5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"  
            android:gravity="center"      
            android:textColor="@android:color/black"    
            android:text="작성자" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="시간" />
        
        </LinearLayout>
        
    <ListView android:id="@+id/listviewComentsList" 
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"  >
        
    </ListView>
    
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"   
        android:gravity="right"     
        android:orientation="horizontal" >

        <!-- <Button
            android:id="@+id/buttonSave"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_btn_save" /> -->
		
        <Button
            android:id="@+id/buttonComentCancel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닫기"
            android:textColor="#000000"
            android:background="@drawable/btn_basic" />
    </LinearLayout>

</LinearLayout>