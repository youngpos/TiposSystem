<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|center_horizontal">

    <!-- 순번 -->
    <TextView android:id="@+id/item1"
        android:layout_width="0dip"
        android:layout_weight="0.2"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="12sp"
        android:text="순번"
        />

    <LinearLayout android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <!-- 첫번째 칸 -->
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="25dip"
            android:orientation="horizontal">

            <TextView android:id="@+id/item2"
                android:layout_height="wrap_content"
                android:layout_width="0dip"
                android:layout_weight="0.45"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="left|bottom|center_vertical"
                android:paddingRight="10dip"
                android:text="바코드" />

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:orientation="horizontal">
            <TextView android:id="@+id/item3"
                android:layout_height="wrap_content"
                android:layout_width="0dip"
                android:layout_weight="0.45"
                android:textColor="#CC723D"
                android:textSize="12sp"
                android:gravity="left|top|center_vertical"
                android:paddingRight="10dip"
                android:text="상품명" />

            <!-- 안보이게 필드만 정의한다 -->
            <TextView android:id="@+id/item4"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="매입가" />
            <TextView android:id="@+id/item5"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="판매가" />
            <TextView android:id="@+id/item6"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="상품매입가" />
            <TextView android:id="@+id/item7"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="상품판매가" />

        </LinearLayout>

    </LinearLayout>
    <!-- 첫번째 칸 -->
    <TextView android:id="@+id/item8"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="0.3"
        android:gravity="center"
        android:text="매입" />
    <TextView android:id="@+id/item9"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="0.3"
        android:gravity="center"
        android:text="검수" />
    <TextView android:id="@+id/item10"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="0.3"
        android:gravity="center"
        android:text="차액" />
    <!-- 안보이게 필드만 정의한다        -->
    <TextView android:id="@+id/item11"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="0.3"
        android:gravity="center"
        android:visibility="gone"
        android:text="Gubun" />
    <TextView android:id="@+id/item12"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="0.3"
        android:gravity="center"
        android:text="구분" />
    <!-- 안보이게 필드만 정의한다        -->
    <TextView android:id="@+id/item13"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="0.3"
        android:gravity="center"
        android:visibility="gone"
        android:text="Writer" />
    <!--
    <CheckBox
        android:id="@+id/item11"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:textColor="#d7d7d7"
        android:gravity="center"
        />
    -->


</LinearLayout>
