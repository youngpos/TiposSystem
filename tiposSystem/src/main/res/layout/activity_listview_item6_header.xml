<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"       
    
    android:orientation="vertical" >
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_vertical"
        android:paddingTop="5dip"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text=" [ 영수증 ]"                
        />
		
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dip" 
        android:paddingLeft="15dip"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"            
            android:text=" 사업자번호 : "
            android:textColor="#000000"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"    
            android:id="@+id/text_customernumber"
            android:textColor="#000000"
            />
        
    </LinearLayout>
    
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"      
        android:paddingLeft="15dip"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"            
            android:text=" 주소 : "
            android:textColor="#000000"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"    
            android:id="@+id/text_customeraddress"
            android:textColor="#000000"
            />
        
    </LinearLayout>
     <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"      
        android:paddingLeft="15dip"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"    
            android:text=" 대표 : "
            android:textColor="#000000"
            />
        <TextView android:layout_width="0dip"
            android:layout_height="fill_parent"    
            android:layout_weight="0.5"
            android:gravity="left"
            android:id="@+id/text_customerceoname"     
            android:textColor="#000000"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"   
            android:text=" 전화번호 : "
            android:textColor="#000000"
            />
        <TextView android:layout_width="0dip"
            android:layout_height="fill_parent"   
            android:layout_weight="1" 
            android:id="@+id/text_customerphone"        
            android:textColor="#000000"
            />
    </LinearLayout>
    
     <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dip"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"     
            android:text=" POS : "
            android:textColor="#000000"
            />
        <TextView android:layout_width="0dip"
            android:layout_height="fill_parent"    
            android:layout_weight="0.3"
            android:gravity="left"
            android:id="@+id/text_posnumber"        
            android:textColor="#000000"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"   
            android:text=" 계산원 : "
            android:textColor="#000000"
            />
        <TextView android:layout_width="0dip"
            android:layout_height="fill_parent"   
            android:layout_weight="1" 
            android:id="@+id/text_casher"        
            android:textColor="#000000"
            />        
    </LinearLayout>
    
     <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dip"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"     
            android:text=" 일자 : "
            android:textColor="#000000"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:id="@+id/text_saledate"      
            android:textColor="#000000"
            />
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"   
            android:paddingLeft="20dip"
            android:id="@+id/text_saletime"      
            android:textColor="#000000"
            />        
    </LinearLayout>
     
     <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dip"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"     
            android:text=" 전표번호 : "
            android:textColor="#000000"
            />
        <TextView android:layout_width="0dip"
            android:layout_height="fill_parent"    
            android:layout_weight="0.3"
            android:gravity="left"
            android:id="@+id/text_sale_num"    
            android:textColor="#000000"
            />      
    </LinearLayout>
    
     
     <!-- 구분선 -->
      <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:height="1dip"
        android:layout_marginTop="5dip"     
        android:background="@drawable/dot_line"   
        android:layout_marginRight="15dip"    
        android:layout_marginBottom="10dip"         
        />
     <LinearLayout android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingLeft="15dip"
         >
         <TextView android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:layout_weight="0.8"
             android:textColor="#000000"
             android:paddingLeft="20dip"               
             android:text="품명"
             />
         <TextView android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:layout_weight="0.3"
               android:textColor="#000000"
             android:text="단가"
             />
         <TextView android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:layout_weight="0.3"
               android:textColor="#000000"
             android:text="수량"
             android:paddingRight="10dip"
             />         
     </LinearLayout>
     
     
    <!-- 구분선 -->
      <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:height="1dip"
        android:layout_marginTop="5dip"     
        android:background="@drawable/dot_line"   
        android:layout_marginRight="15dip"    
        android:layout_marginBottom="10dip"         
        />
     
    
</LinearLayout>
</LinearLayout>
