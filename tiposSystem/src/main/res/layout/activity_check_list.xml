    <!-- Header -->
    <!-- grid header 가로 리니어레이아웃 -->
    <LinearLayout
        style="@style/GridHeadLinear_Style"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="vertical">

        <!-- 1 row -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@+id/linearLayout2"
            >

            <TextView
                android:id="@+id/item1"
                style="@style/GridHeadText_Style"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="매입일"
/>
            <View style="@style/divider_v" />
            <TextView
                android:id="@+id/item2"
                style="@style/GridHeadText_Style"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:text="코드"
/>
            <View style="@style/divider_v" />
            <TextView
                android:id="@+id/item3"
                style="@style/GridHeadText_Style"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:text="총매입가"
 />
            <View style="@style/divider_v" />
            <TextView
                android:id="@+id/item5"
                style="@style/GridHeadText_Style"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:text="총합계"
/>
        </LinearLayout>
        <View style="@style/divider_h" />
        <!-- 2 row -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@+id/linearLayout2">

            <TextView
                android:id="@+id/item6"
                style="@style/GridHeadText_Style"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="전표번호"
/>
            <View style="@style/divider_v" />
            <TextView
                android:id="@+id/item7"
                style="@style/GridHeadText_Style"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:text="거래처명"
/>
            <View style="@style/divider_v" />
            <TextView
                android:id="@+id/item8"
                style="@style/GridHeadText_Style"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:text="총반품가"
/>
            <View style="@style/divider_v" />
            <TextView
                android:id="@+id/item9"
                style="@style/GridHeadText_Style"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:text="검수상태"
/>

        </LinearLayout>

    </LinearLayout>


    <!-- List Divider -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/header"
        android:background="?android:attr/listDivider" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_below="@+id/header"
        android:layout_weight="1">

        <ListView
            android:id="@+id/listviewCheckList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewListViewRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROW"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonClose"
            style="@style/Button_Style_Point2"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:onClick="onButtonClose"
            android:text="닫기"
/>

    </LinearLayout>

</LinearLayout>
