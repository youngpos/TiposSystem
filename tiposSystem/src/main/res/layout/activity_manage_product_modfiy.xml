<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLinear_Style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tipsystem.tips.ManageProductActivityModfiy">

    <!--    &lt;!&ndash; ToolBar Set &ndash;&gt;-->
    <!--    <include layout="@layout/toolbar" />-->

    <!--region 헤더 리니어-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonProductRegist"
            style="@style/Button_Style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonProductModify"
            style="@style/Button_Style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.5"
            android:text="가격\n비교" />

        <Button
            android:id="@+id/buttonProductRecovery"
            style="@style/Button_Style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:text="복구"
            android:textColor="@color/p_button_text"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonProductBarprint"
            style="@style/Button_Style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"
            android:text="택저장"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonProductBarprintTran"
            style="@style/Button_Style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"
            android:text="택전송"
            android:visibility="gone" />

        <Button
            style="@style/Button_Style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"
            android:onClick="setSelfBarcode"
            android:text="자체\n바코드"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_printer_setting"
            style="@style/Button_Style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"
            android:text="택설정" />

        <Button
            android:id="@+id/button_printer_option"
            style="@style/Button_Style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"
            android:text="택옵션" />

        <Button
            android:id="@+id/button_printer_print"
            style="@style/Button_Style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"
            android:text="택발행" />
        <!--        <Button-->
        <!--            android:id="@+id/buttonProductRenew"-->
        <!--            style="@style/Button_Style_Point2"-->
        <!--            android:layout_width="0dip"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginLeft="5dp"-->
        <!--            android:layout_weight="0.8"-->
        <!--            android:text="새로입력" />-->
    </LinearLayout>
    <!--endregion-->
    <!-- region 프린터 연결 상태 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/textview_printer_state"
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="" />

        <Spinner
            android:id="@+id/spinner_select_printer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <!-- endregion -->

    <!--region 1줄 바코드,상품명 -->
    <LinearLayout
        android:id="@+id/linearLayoutTitle"
        style="@style/ItemLinear_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextBarcode"
            style="@style/EditText_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="13"
            android:hint="바코드"
            android:inputType="text"
            android:lines="1"
            android:maxLength="40"
            android:nextFocusDown="@id/editTextProductName"
            android:padding="5dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

        <requestFocus />

        <EditText
            android:id="@+id/editTextProductName"
            style="@style/EditText_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/edit_border"
            android:ems="25"
            android:hint="상품명"
            android:inputType="text"
            android:lines="1"
            android:maxLength="25"
            android:nextFocusDown="@id/editTextCustomerCode"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

        <Button
            android:id="@+id/buttonBarcode"
            style="@style/Button_Style"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.4"
            android:onClick="onBarcodeSearch"
            android:text="검색" />
        <Button
            android:id="@+id/buttonProductRenew"
            style="@style/Button_Style_Point2"
            android:layout_width="0dip"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.5"
            android:text="새로입력" />
    </LinearLayout>
    <!--endregion-->

    <!--region 2줄 거래처코드,거래처명-->
    <LinearLayout
        style="@style/ItemLinear_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextCustomerCode"
            style="@style/EditText_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/edit_border"
            android:ems="5"
            android:hint="거래처코드"
            android:inputType="number"
            android:lines="1"
            android:maxLength="5"
            android:nextFocusDown="@id/editTextCustomerName"
            android:padding="5dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/editTextCustomerName"
            style="@style/EditText_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:layout_weight="1.3"
            android:hint="거래처명"
            android:lines="1"
            android:maxLength="25"
            android:nextFocusDown="@id/editTextStandard"
            android:padding="5dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

        <Button
            style="@style/Button_Style"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.2"
            android:onClick="onCustomerSearch"
            android:text="검색" />
    </LinearLayout>
    <!--endregion-->

    <!--region 분류-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="분   류"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/buttonClassificationType1"
            style="@style/Button_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:onClick="onClassification1"
            android:text="대분류" />

        <Button
            android:id="@+id/buttonClassificationType2"
            style="@style/Button_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:onClick="onClassification2"
            android:text="중분류" />

        <Button
            android:id="@+id/buttonClassificationType3"
            style="@style/Button_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:onClick="onClassification3"
            android:text="소분류" />
    </LinearLayout>
    <!--endregion-->

    <!--region 3줄 규격,입수 -->
    <LinearLayout
        style="@style/ItemLinear_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.77"
            android:gravity="center"
            android:text="규격" />

        <EditText
            android:id="@+id/editTextStandard"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/edit_border"
            android:gravity="right"
            android:hint="규격"
            android:lines="1"
            android:maxLength="10"
            android:nextFocusDown="@id/editTextPurchasePrice"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="입수"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/p_text_text" />

        <EditText
            android:id="@+id/editTextAcquire"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="@drawable/edit_border"
            android:ems="3"
            android:gravity="right"
            android:hint="0"
            android:inputType="number"
            android:lines="1"
            android:maxLength="3"
            android:selectAllOnFocus="true"
            android:singleLine="true" />

        <Button
            android:id="@+id/buttonAcquire"
            style="@style/Button_Style"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.4"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="등록" />
    </LinearLayout>
    <!--endregion-->

    <!--<editor-fold desc="4줄 매입가,판매가">-->
    <LinearLayout
        style="@style/ItemLinear_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.77"
            android:gravity="center"
            android:nextFocusDown="@+id/editTextPurchasePrice"
            android:text="매입가"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextPurchasePrice"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/edit_border"
            android:ems="10"
            android:gravity="right"
            android:hint="매입가"
            android:inputType="numberDecimal"
            android:lines="1"
            android:maxLength="12"
            android:nextFocusDown="@+id/editTextSalesPrice"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="판매가"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextSalesPrice"
            style="@style/EditText_Style2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/edit_border"
            android:ems="10"
            android:gravity="right"
            android:hint="판매가"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:lines="1"
            android:maxLength="10"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

    </LinearLayout>
    <!--</editor-fold>-->

    <!--<editor-fold desc="5줄 부가세, 재고">-->
    <LinearLayout
        style="@style/ItemLinear_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.77"
            android:gravity="center"
            android:text="매입원가"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextPurchasePriceOriginal"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/edit_border"
            android:ems="10"
            android:gravity="right"
            android:padding="2dp"
            android:textCursorDrawable="@null" />

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="이익률(%)"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextDifferentRatio"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/edit_border"
            android:ems="10"
            android:gravity="right"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:lines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

    </LinearLayout>
    <!--</editor-fold>-->

    <!--<editor-fold desc="6줄 부가세 재고">-->
    <LinearLayout
        style="@style/ItemLinear_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.77"
            android:gravity="center"
            android:text="부가세"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextPurchasePriceOriginalTax"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/edit_border"
            android:ems="10"
            android:gravity="right" />

        <CheckBox
            android:id="@+id/checkbox_purpritaxgubun"
            android:layout_width="0dip"
            android:layout_height="25dp"
            android:layout_weight="0.5"
            android:button="@drawable/checkbox_custom"

            android:checked="true" />

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="재고"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextRealSto"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edit_border"
            android:ems="10"
            android:gravity="right"
            android:imeOptions="actionDone" />
    </LinearLayout>
    <!--</editor-fold>-->

    <!--region 7줄 행매가, 행판가-->
    <LinearLayout
        style="@style/ItemLinear_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.77"
            android:gravity="center"
            android:nextFocusDown="@+id/editTextPurchasePrice"
            android:text="행매가"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextEventPurchasePrice"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/edit_border"
            android:focusable="false"
            android:gravity="right"
            android:hint="행사매입가" />

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="행판가"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextEventSalesPrice"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/edit_border"
            android:focusable="false"
            android:gravity="right"
            android:hint="행사판매가" />

    </LinearLayout>
    <!--endregion-->

    <!--region 8줄 시작일, 종료일-->
    <LinearLayout
        style="@style/ItemLinear_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.77"
            android:gravity="center"
            android:nextFocusDown="@+id/editTextPurchasePrice"
            android:text="시작일"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextEventStartDate"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/edit_border"
            android:focusable="false"
            android:gravity="right"
            android:hint="행사시작일" />

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="종료일"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextEventEndDate"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/edit_border"
            android:focusable="false"
            android:gravity="right"
            android:hint="행사종료일" />

    </LinearLayout>
    <!--endregion-->

    <!--region 9줄 A,B,C-->
    <LinearLayout
        style="@style/ItemLinear_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="A"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextASell_Pri"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="right"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:lines="1"
            android:maxLength="10"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="B"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextBSell_Pri"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="right"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:lines="1"
            android:maxLength="10"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="C"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextCSell_Pri"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="right"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:lines="1"
            android:maxLength="10"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

    </LinearLayout>
    <!--endregion-->

    <!--region 10줄 이익률-->
    <LinearLayout
        style="@style/ItemLinear_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="이익률"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextADifferentRatio"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
