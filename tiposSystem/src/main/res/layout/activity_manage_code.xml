<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLinear_Style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tipsystem.tips.ManageCodeActivity">

    <!-- Toolbar 추가 -->
    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 1 Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingHorizontal="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- 상품관리 -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/manage_code_btn01"
                android:onClick="onClickManageProduct" />

            <!-- 거래처관리 -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/manage_code_btn02"
                android:onClick="onClickManageCustomer" />
            <!-- 가격비교 -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/manage_code_btn03"
                android:onClick="onClickComparePrice" />

            <!-- 바코드발행관리 -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/manage_code_btn04"
                android:onClick="onClickBarcodePrint" />

        </LinearLayout>

        <!-- 2 Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

<!--            &lt;!&ndash; 바코드발행관리 &ndash;&gt;-->
<!--            <Button-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="100dp"-->
<!--                android:layout_margin="10dp"-->
<!--                android:background="@drawable/manage_code_btn04"-->
<!--                android:onClick="onClickBarcodePrint" />-->

            <!--  -->
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:visibility="invisible"
                />
            <!--  -->
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:visibility="invisible"
                />
        </LinearLayout>

        <!-- 3 Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="horizontal">

            <!-- 가격비교 -->
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/manage_code_btn03"
                android:onClick="onClickComparePrice" />
        </LinearLayout>

        <!-- 4 Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="horizontal">

            <!-- 바코드발행관리 -->
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/manage_code_btn04"
                android:onClick="onClickBarcodePrint" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>