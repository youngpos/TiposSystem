        <!--        <item name="android:orientation">vertical</item>-->
    </style>

    <!-- TextView -->
    <style name="TextView_Style">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/p_text_text</item>
        <item name="android:gravity">center</item>
    </style>
