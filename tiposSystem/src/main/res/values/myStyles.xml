    <!-- 기본 Activity Style -->
    <style name="MainLinear_Style">
        <item name="android:background">#ffffff</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">top</item>
    </style>

    <!-- 헤드 영역 -->

    <!-- 서브헤드 영역 -->
    <style name="SubHeadLinear_Style">
        <item name="android:background">#403c3d</item>
        <item name="android:layout_marginTop">1dp</item> <!--위 여백 -->
        <item name="android:layout_marginBottom">0dp</item> <!-- 아래 여백 -->
        <item name="android:padding">1dp</item> <!--안 여백 -->
        <item name="android:gravity">center</item>
    </style>

    <!-- 탭헤드 영역 -->

